<div>
    <label>Summary</label>
    <br>
    <textarea name="summary" class='input-summary'><%= book.summary %></textarea>
    <br>
</div>

<br><br>

<div>
    <label>Tags</label>
    <div id = tagFields>
    <select style="color:black" class="input-tags js-example-basic-multiple"  name="tags" multiple="multiple">
        <%tags.forEach ( tags => {%>
            <option  label= "<%=tags.name%>" value = "<%= tags.id %>"><%=tags.name%></option>
        <%})%>
    </select>
    <br id="br0">
    </div>
</div>

<br><br>

<div>
    <label>Publish Date</label>
    <input type="date" name="releaseDate"
                value = <%= book.releaseDate == null ? '' :
                book.releaseDate.toISOString().split('T')[0]  %>>
</div>

<br><br>

<div>
    <label>Number of chapters</label>
    <input type='number' name='length' value="book.length" min="1">
</div>

<br><br>

<div>
    <div style="width:150px;display:inline-block;margin-right: 50px;">
        <label>Cover</label>
        <input id="coverUp" class="filepond" type="file" name="cover">
    </div>
    <div style="width:500px;display:inline-block;">
        <label>Background</label>
        <input id="wallpaperUp" class="filepond" type="file" name="wallpaper">
    </div>
    <%- include('../partials/fileUpload.ejs') %>
</div>