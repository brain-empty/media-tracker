<section class='home'>
    <!-- insert cover image here later -->
<div class='media-header'>
    <div id="header-left">
        <img src="<%= book.coverImagePath || "/images/missing_movie.png"%>">
    </div>
    <div>
        <h2><%=book.name%></h2>
        <p><%=book.summary%></p>
    </div id="header-right">
</div>

<div class='media-body'>

    <div id="body-left">
        <div>
            <h3>Tags</h3>
            <ul>
            <% for (i=0;i<book.tags.length;i++) { %>
                <li><%=book.tags[i].name%></li><br>
            <%}%>
            </ul>
        </div>

        <div>
            <h3>Release Date</h3>
            <%=book.releaseDate%>
        </div>
    </div>

    <div id="body-right">
        <h3>Staff</h3>
            <%if ( staff!="" || staff!= null ) {%>
            <div> <!--list books-->
                <ul>
                <% for (let i = 0; i < staff.length; i++){ %>
                    <li><%=staff[i].name%> - <%=staff[i].works.role[0].name%></li><br>
                <%}%>
                </ul>
                </div>
            <%}%>
    </div>
    
</div>
<a href="/books/<%=book.id%>/edit">Edit</a>
<%- include ('../partials/deleteForm', {url : `/books/${book.id}`}) %>
</form>
</section>