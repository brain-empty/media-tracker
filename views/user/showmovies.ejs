<h1 style="text-align: center;"><%=user.username%></h1>

<h3 style="text-align: center;">Movies</h3>
<div style="
    display:flex;
    flex-wrap:wrap;
    justify-content: space-between;
    align-items: center;
    margin-inline:25%;
">
<div>
        
        <h4>Watched</h4>
            <%user.movies.forEach ( movies => { %>
                <%if (movies.watchStatus == 'Watched') {%>
                    <div class='media-box-mini'><a href="/movies/<%=movies.movie.id%>"><img src="<%= movies.movie.coverImagePath || "/images/missing_movie.png"%>"><div class="media-box-mini-title"><div><%=movies.movie.name%></div></div></a></div>
                <%}%>
            <%})%>

        
</div>

<div>
    <h4>Planned</h4>
    <%user.movies.forEach ( movies => { %>
        <%if (movies.watchStatus == 'Plan to watch') {%>
            <div class='media-box-mini'><a href="/movies/<%=movies.movie.id%>"><img src="<%= movies.movie.coverImagePath || "/images/missing_movie.png"%>"><div class="media-box-mini-title"><div><%=movies.movie.name%></div></div></a></div>
        <%}%>
    <%})%>
</div>
</div>