<div class='wrapper'>
        <div class="wallpaper-wrapper">
            <div class="wallpaper">
                <!-- using a risky move here to render wallpaper in the bg with gradient, perhaps change later -->
                    <div class='wallpaper-img' style="
                    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgb(32, 32, 32) 100%),
                    url('<%=movie.wallpaperImagePath||`/images/missing_wallpaper.png`%>');"></div>
            </div>
        
    </div>


    <div class='media-header'>
        <div id="header-left">
            <img src="<%= movie.coverImagePath || "/images/missing_movie.png"%>">
        </div>
        <div id="header-right">
            <h2><%=movie.name%></h2>
            <p><%=movie.summary%></p>
        </div>
    </div>

<div class='media-body'>

    <div id="body-left">
        <div>
            <h3>Tags</h3>
            <ul>
            <% for (i=0;i<movie.tags.length;i++) { %>
                <li><%=movie.tags[i].name%></li><br>
            <%}%>
            </ul>
        </div>

        <div>
            <h3>Release Date</h3>
            <% if(movie.releaseDate!=null){%><%=movie.releaseDate.toDateString()%><%}%>
        </div>
    </div>

    <div id="body-right">
        <h3>Staff</h3>
            <%if ( staff!="" || staff!= null ) {%>
            <div> <!--list books-->
                <ul>
                <% for (let i = 0; i < staff.length; i++){ %>
                    <li><%=staff[i].name%> - <%=staff[i].works.role[0].name%></li><br>
                <%}%>
                </ul>
                </div>
            <%}%>
    </div>
    
</div>

<div style="margin-left:75%;">
<a class="btn btn-primary" href="/movies/<%=movie.id%>/edit">Edit</a>
<%- include ('../partials/deleteForm', {url : `/movies/${movie.id}`}) %>
</div>
</form>

</div>

</section>