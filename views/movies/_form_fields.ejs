<div>
    <label>Summary</label>
    <br>
    <textarea name="summary" class='input-summary'><%= movie.summary %></textarea>
    <br>
</div>

<br><br>

<div>
    <label>Tags</label>
    <div id = tagFields>
    <select class="input-tags js-example-basic-multiple"  name="tags" multiple="multiple">
        <%tags.forEach ( tags => {%>
            <option label= "<%=tags.name%>" value = "<%= tags.id %>"><%=tags.name%></option>
        <%})%>
    </select>
    <br id="br0">
    </div>
</div>

<br><br>

<div>
    <label>Release Date</label>
    <input type="date" name="releaseDate"
                value = <%= movie.releaseDate == null ? '' :
                movie.releaseDate.toISOString().split('T')[0]  %>
</div>

<br><br>

<div>
    <div>
        <label>Cover</label>
        <input id="coverUp" class="form-item-no-grow" type="file" name="cover">
    </div>
    <br>
    <div>
        <label>Background</label>
        <input id="wallpaperUp" class="form-item-no-grow" type="file" name="wallpaper">
    </div>
    <%- include('../partials/fileUpload.ejs') %>
</div>

<script>
    $(document).ready(function() {
        $('.js-example-basic-multiple').select2();
        $('.js-example-basic-single').select2();
    });
</script>